<div class="depot_form">
  <%= form_with(model: user) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h2>Enter User Details</h2>

    <div class="mb-3">
      <%= form.label :name, class: 'col-form-label-sm' %>
      <%= form.text_field :name, size: 40, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :password, class: 'col-form-label-sm' %>
      <%= form.password_field :password, size: 40, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :password_confirmation, class: 'col-form-label-sm' %>
      <%= form.password_field :password_confirmation, id: :user_password_confirmation, size: 40, class: 'form-control' %>
    </div>

    <div class="actions mb-3">
      <%= form.submit class: 'btn btn-sm btn-primary ' %>
    </div>
  <% end %>
</div>
