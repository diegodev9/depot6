<div class="row">
  <div class="col-lg-4">
    <%= image_tag(@product.image_url, class: 'img-fluid') %>
  </div>
  <div class="col-lg-8">
    <p>
      <strong>Title:</strong>
      <%= @product.title %>
    </p>

    <p>
      <strong>Dedscription:</strong>
      <%= @product.description %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>

    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>
  </div>
</div>
